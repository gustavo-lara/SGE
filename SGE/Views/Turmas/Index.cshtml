@model IEnumerable<SGE.Models.Turma>

@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="d-flex row justify-content-between my-5">
        <div style="width: 15%;">
            <img src="https://placehold.co/200x150" />
        </div>
        <div style="width: 85%;" class="ps-5">
            <div class="d-flex row align-items-center justify-content-between">
                <h1 style="width:22%; font-size:3.2rem; color:#F6D524;">Turmas</h1>
                <div style="height:5px; width:78%; background:#F6D524;" />
            </div>
            <p style="font-size:1.5rem; color:#fff;">Gerencie as turmas da sua instituição.</p>
        </div>
    </div>

    <div class="justify-content-between my-5" style="width:100%;">
        <div class="d-flex row align-items-center" style="width:100%;">
            <div style="width:40%;" class="d-flex justify-content-between align-items-center">
                <h2 style="font-size:2rem; color:#fff;">Todas as Turmas</h2>
                <a class="btn" asp-action="Create"><svg bootstrap-icon="PlusSquare" width="40" height="40" aria-label="Pesquisar" style="color:#fff"></svg></a>
            </div>
            <div style="width:60%;">
                Barra de Pesquisa
            </div>
        </div>
        <div style="width:100%;">
            Tabela
        </div>
    </div>

    <div class="my-5" stye="width:100%;">
        <div class="d-flex justify-content-start align-items-center">
            <h2 style="font-size:2rem; color:#fff;">Turma:</h2>
            <input type="text" placeholder="Selecionar turma" style="background:none; border: none; border-bottom: 1px solid #fff;" class="ps-3 ms-3" />
        </div>
        <div class="d-flex row justify-content-between mt-3">
            <div style="width:50%;">
                <h3 style="font-size:1rem; color:#fff;">Alunos Matriculados</h3>
                <div>
                    Tabela
                </div>
            </div>
            <div style="width:50%;">
                <h3 style="font-size:1rem; color:#fff;">Adicionar Alunos:</h3>
                <div>
                    Tabela
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TurmaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadAtivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadInativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TurmaEncerrada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TurmaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadAtivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadInativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurmaEncerrada)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TurmaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TurmaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TurmaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
