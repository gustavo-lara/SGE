            Voltar
        </a>
    </div>
    <div style="width: 100%; height:5px; background:#f6d524;"> </div>
</div>

@if (ViewData["Erro"] != null)
{
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="alert alert-danger">
                <strong> @ViewData["Erro"] </strong>

            </div>
        </div>
    </div>
}

<div class="">
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="d-flex flex-row row justify-content-between align-items-end" style="width:100%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-3 my-2">
            <input asp-for="Matricula" class="form-control" placeholder="Matrícula" />
            <span asp-validation-for="Matricula" class="text-danger"></span>
        </div>

        <div class="col-5 my-2">
            <input asp-for="AlunoNome" class="form-control" placeholder="Nome do Aluno" />
            <span asp-validation-for="AlunoNome" class="text-danger"></span>
        </div>

        <div class="col-4 my-2">
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="col-4 my-2">
            <input asp-for="Email" class="form-control" placeholder="Email do Aluno" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-3 my-2">
            <input asp-for="Celular" class="form-control" placeholder="Celular do Aluno" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>

        <div class="col-4 my-2">
            <input asp-for="Logradouro" class="form-control" placeholder="Logradouro" />
            <span asp-validation-for="Logradouro" class="text-danger"></span>
        </div>

        <div class="col-2 my-2">
            <input asp-for="Numero" class="form-control" placeholder="Número" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="col-3 my-2">
            <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="col-3 my-2">
            <input asp-for="Estado" class="form-control" placeholder="Estado" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="col-3 my-2">
            <input asp-for="CEP" class="form-control" placeholder="CPF" />
            <span asp-validation-for="CEP" class="text-danger"></span>
        </div>

        <div class="col-4 my-2">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="col-4 my-2">
            <label for="ConfirmeSenha" class="control-label">Confirme a Senha</label>
            <input id="ConfirmeSenha" type="password" name="ConfirmeSenha" class="form-control" />
        </div>

        <div class="col-4 my-2">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input class="form-check-input" type="hidden" asp-for="CadAtivo" value="true" />
        </div>

        <div class="form-group">
            <input asp-for="DataCadastro" class="form-control" type="hidden"
                   value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
        </div>

        <div class="form-group">
            <input asp-for="CadInativo" class="form-control" type="hidden" />
        </div>

        <div class="form-group">
            <input asp-for="TipoUsuarioId" type="hidden" value="@TipoUser" />
        </div>

        <div class="col-9">
            <label asp-for="UrlFoto" class="control-label"></label>
            <input asp-for="UrlFoto" type="file" class="form-control" name="UrlFoto" />
            <span asp-validation-for="UrlFoto" class="text-danger"></span>
        </div>

        <div class="col-3">
            <input type="submit" value="Cadastrar" class="btn botaoBranco2" style="width:100%;" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
