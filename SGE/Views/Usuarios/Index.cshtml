@model IEnumerable<SGE.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="d-flex row justify-content-between my-5 mb-5">
        <div style="width: 15%;">
            <img src="https://placehold.co/200x150" />
        </div>
        <div style="width: 85%;" class="ps-5">
            <div class="d-flex row align-items-center justify-content-between">
                <h1 style="width:25%; font-size:3.2rem; color:#F6D524;">Usuários</h1>
                <div style="height:5px; width:75%; background:#F6D524;" />
            </div>
            <p style="font-size:1.5rem; color:#fff;">Visualize quem tem acesso à ferramenta SGE</p>
        </div>
    </div>

    <div class="d-flex row justify-content-between mt-5" style="width:100%;">
        <div style="width:40%;">
            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-size:2rem; color:#fff;">Tipos de Usuários</h2>
                <button class="btn">
                    <svg bootstrap-icon="PlusSquare" width="40" height="40" aria-label="Pesquisar" style="color:#fff"></svg>
                </button>
            </div>
            <div>
                Tabela
            </div>
        </div>
        <div style="width:55%;">
            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-size:2rem; color:#fff;">Usuários Cadastrados</h2>
                <button class="btn">
                    <svg bootstrap-icon="PlusSquare" width="40" height="40" aria-label="Pesquisar" style="color:#fff"></svg>
                </button>
            </div>
            <div>
                Barra de pesquisa
            </div>
            <div>
                Tabela
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadAtivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadInativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadAtivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CadInativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario.Tipo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UsuarioId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UsuarioId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UsuarioId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
